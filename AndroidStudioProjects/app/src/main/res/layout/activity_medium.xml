<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediumActivity">

    <Spinner
        android:id="@+id/medPrepSpinner"
        android:layout_width="409dp"
        android:layout_height="55dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wybierz substancję czynną"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/medPrepSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.592"
        tools:ignore="HardcodedText" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="403dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.427">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView40"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:padding="10sp"
                android:text="Nazwa leku"
                android:textAlignment="gravity"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10sp"
                android:text="zalecana dawka"
                android:textAlignment="center"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="zalecana ilość leku"
                android:textAlignment="center"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textLek1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:padding="5sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:textAlignment="gravity"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textDawka1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textIlosc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textAlignment="center"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textLek2"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:textAlignment="gravity"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textDawka2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textIlosc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textAlignment="center"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textLek3"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:textAlignment="gravity"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textDawka3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textIlosc3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textAlignment="center"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textLek4"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:textAlignment="gravity"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textDawka4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textIlosc4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textAlignment="center"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textLek5"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:textAlignment="gravity"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textDawka5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textIlosc5"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:padding="10sp"
                android:textAlignment="center"
                android:textSize="16sp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/menuBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="Menu główne"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>